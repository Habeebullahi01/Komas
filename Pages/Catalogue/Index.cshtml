@page
@model CatalogueIndexModel
@{
    ViewData["Title"] = "Catalogue";
}

<div>
    <p>This is the Catalogue</p>
    <a href="/Catalogue/AddProduct">Add new Product</a>
    <div class="flex flex-wrap items-center" style="justify-content: space-evenly; gap: 10px;">

        @foreach (var product in Model.Products)
        {
            <div class="ba w-20 pa3">
                <p class="text-deep-brown fw6 ma0">@product.ProductName</p>
                <p class="text-medium-brown ma0">@product.Price.ToString("C", new CultureInfo("en-ng"))</p>
            </div>
        }
    </div>
</div>